{
  "compilerOptions": {
    "outDir": "./lib",
    "module": "commonjs",
    "target": "es5",
    "esModuleInterop": true,
    "lib": ["dom", "es2015", "scripthost"],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "baseUrl": "./src",
    "paths": {
      "~/*": [ "./src/*" ]
    }
  },
  "exclude": [
    "node_modules",
    "lib"
  ]
}